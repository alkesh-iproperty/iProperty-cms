<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <android.support.design.widget.TextInputLayout
        style="@style/GrayTextAppearence.App.TextInputLayout_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintAnimationEnabled="true">

        <com.oozeetech.iproperty_cms.widgets.DLEditText
            android:id="@+id/etFaultName"
            style="@style/txt_txt_secondary_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:ems="15"
            android:hint="@string/hint_fault_title"
            android:inputType="text"
            android:paddingBottom="10dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:textCursorDrawable="@null" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_500" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        style="@style/GrayTextAppearence.App.TextInputLayout_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintAnimationEnabled="true">

        <com.oozeetech.iproperty_cms.widgets.DLEditText
            android:id="@+id/etFaultDesc"
            style="@style/txt_txt_secondary_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:ems="15"
            android:hint="@string/hint_fault_desc"
            android:inputType="text"
            android:paddingBottom="10dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:textCursorDrawable="@null" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_500" />

    </android.support.design.widget.TextInputLayout>


</LinearLayout>