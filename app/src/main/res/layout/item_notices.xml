<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="8dp">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/ivNoticeItem"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/notice"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="12dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.oozeetech.iproperty_cms.widgets.DLTextView
                android:id="@+id/tvNoticeTitle"
                style="@style/txt_primary_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name" />

            <!--<com.oozeetech.iproperty_cms.widgets.DLTextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--style="@style/txt_txt_secondary_16"-->
            <!--android:text="@string/app_name"-->
            <!--android:id="@+id/tvNoticeDate"/>-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/ivNoticeError"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_error_red_24dp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>