<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp">

    <android.support.design.widget.TextInputLayout
        style="@style/GrayTextAppearence.App.TextInputLayout_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintAnimationEnabled="true">

        <com.oozeetech.iproperty_cms.widgets.DLEditText
            android:id="@+id/etAddReqName"
            style="@style/txt_txt_primary_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawablePadding="10dp"
            android:ems="15"
            android:drawableLeft="@drawable/ic_username_black"
            android:hint="@string/hint_name"
            android:inputType="text"
            android:paddingBottom="8dp"
            android:singleLine="true"
            android:paddingTop="5dp"
            android:textColorHint="@color/secondaryText"
            android:textCursorDrawable="@null" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/secondaryText" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        style="@style/GrayTextAppearence.App.TextInputLayout_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintAnimationEnabled="true">

        <com.oozeetech.iproperty_cms.widgets.DLEditText
            android:id="@+id/etAddRequestExpected"
            style="@style/txt_txt_primary_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawablePadding="10dp"
            android:ems="15"
            android:drawableLeft="@drawable/ic_expected_people"
            android:hint="@string/hint_expected_person"
            android:inputType="text"
            android:paddingBottom="8dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:textColorHint="@color/secondaryText"
            android:textCursorDrawable="@null" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/secondaryText" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        style="@style/GrayTextAppearence.App.TextInputLayout_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintAnimationEnabled="true">

        <com.oozeetech.iproperty_cms.widgets.DLEditText
            android:id="@+id/etAddReqTime"
            style="@style/txt_txt_primary_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawablePadding="10dp"
            android:ems="15"
            android:drawableLeft="@drawable/ic_clock_gray"
            android:hint="@string/hint_time"
            android:inputType="text"
            android:paddingBottom="8dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:textColorHint="@color/secondaryText"
            android:textCursorDrawable="@null" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/secondaryText" />

    </android.support.design.widget.TextInputLayout>

    <com.oozeetech.iproperty_cms.widgets.DButtonMaterial
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/hint_submit"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        style="@style/InverseLightFlatWaveColorButtonRippleStyle"
        android:background="@drawable/btn_bg"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>