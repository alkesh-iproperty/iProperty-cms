<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                    <com.oozeetech.iproperty_cms.widgets.DLTextView
                        android:id="@+id/tvTitle"
                        style="@style/txt_gray_50_22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BBQ in common area" />

                </android.support.v7.widget.Toolbar>

            </android.support.design.widget.AppBarLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivEventBanner"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="#99288CD0"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.oozeetech.iproperty_cms.widgets.DTextView
                        android:id="@+id/tvBannerText"
                        style="@style/txt_gray_50_18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="BBQ in common area" />

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_calendar_gray" />

                    <com.oozeetech.iproperty_cms.widgets.DLTextView
                        android:id="@+id/tvFromDate"
                        style="@style/txt_txt_primary_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:text="Jan 29, 2016" />

                    <com.oozeetech.iproperty_cms.widgets.DLTextView
                        style="@style/txt_txt_secondary_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/to" />

                    <com.oozeetech.iproperty_cms.widgets.DLTextView
                        android:id="@+id/tvToDate"
                        style="@style/txt_txt_primary_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="Jan 31, 2016" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingTop="5dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_clock_gray" />

                    <com.oozeetech.iproperty_cms.widgets.DLTextView
                        android:id="@+id/tvFromTime"
                        style="@style/txt_txt_primary_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="07:00" />

                    <com.oozeetech.iproperty_cms.widgets.DLTextView
                        style="@style/txt_txt_secondary_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/to" />

                    <com.oozeetech.iproperty_cms.widgets.DLTextView
                        android:id="@+id/tvToTime"
                        style="@style/txt_txt_primary_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="10:00" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingTop="14dp">

                    <com.oozeetech.iproperty_cms.widgets.DLTextView
                        style="@style/txt_txt_primary_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/noOfPeopleJoined" />

                    <com.oozeetech.iproperty_cms.widgets.DBTextView
                        android:id="@+id/tvNoOfPeopleJoined"
                        style="@style/txt_txt_primary_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="5" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <com.oozeetech.iproperty_cms.widgets.DLTextView
                        style="@style/txt_txt_primary_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/description" />

                    <com.oozeetech.iproperty_cms.widgets.DLTextView
                        android:id="@+id/tvEventDetails"
                        style="@style/txt_txt_secondary_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Event was organised by organizer. it was awesome event .lots of fun. " />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llJoinEvent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center">

            <com.oozeetech.iproperty_cms.widgets.DLTextView
                style="@style/txt_gray_50_16"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/hint_join" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/dividerColor"></View>

        <LinearLayout
            android:id="@+id/llLeaveEvent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center">

            <com.oozeetech.iproperty_cms.widgets.DLTextView
                style="@style/txt_gray_50_16"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/hint_leave" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>